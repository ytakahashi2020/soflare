{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["jest", "node"],
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@project/anchor": ["anchor/src"],
      "@/*": ["./src/*"]
    },
    "strict": false, // すべての strict チェックを無効にする
    "noImplicitAny": false, // 暗黙の any 型のエラーを無効にする
    "skipLibCheck": true // 外部ライブラリの型チェックをスキップする
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.spec.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
